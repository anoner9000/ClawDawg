{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "openclaw://schemas/investigation/patch_manifest.schema.json",
  "title": "Investigation Patch Manifest",
  "type": "object",
  "required": ["schemaVersion", "runId", "patches"],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "runId": { "type": "string", "minLength": 6 },
    "patches": {
      "type": "array",
      "items": { "$ref": "#/$defs/patch" },
      "default": []
    }
  },
  "$defs": {
    "patch": {
      "type": "object",
      "required": ["filename", "sha256", "touchedPaths", "summary"],
      "properties": {
        "filename": { "type": "string", "pattern": "^[^/].*\\.patch$" },
        "sha256": { "type": "string", "pattern": "^(sha256:)[0-9a-f]{64}$" },
        "touchedPaths": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "summary": { "type": "string", "minLength": 1 },
        "linesAdded": { "type": "integer", "minimum": 0, "default": 0 },
        "linesDeleted": { "type": "integer", "minimum": 0, "default": 0 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
