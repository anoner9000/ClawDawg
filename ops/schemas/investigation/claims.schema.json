{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "openclaw://schemas/investigation/claims.schema.json",
  "title": "Investigation Claims",
  "type": "object",
  "required": ["schemaVersion", "runId", "objective", "claims"],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "runId": { "type": "string", "minLength": 6 },
    "objective": { "type": "string", "minLength": 1 },
    "claims": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/claim" }
    }
  },
  "$defs": {
    "claim": {
      "type": "object",
      "required": ["claimId", "statement", "confidence", "evidenceRefs"],
      "properties": {
        "claimId": { "type": "string", "pattern": "^C-[0-9]{3,}$" },
        "statement": { "type": "string", "minLength": 1 },
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "evidenceRefs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "pattern": "^E-[0-9]{3,}$" }
        },
        "riskTags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "entity_resolution",
              "temporal_alignment",
              "source_reliability",
              "sampling_bias",
              "join_logic",
              "data_completeness",
              "other"
            ]
          },
          "default": []
        },
        "derivationSummary": { "type": "string", "default": "" },
        "notes": { "type": "string", "default": "" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
